    top: 14px;
    width: 25px;
    transform: rotate(-45deg);
  }

  input:checked~.toggle .middle_line {
    opacity: 0;
    transform: translateX(20px);
  }

  input:checked~.slide {
    transform: translateX(0);
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
